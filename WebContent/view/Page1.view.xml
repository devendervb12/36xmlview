<mvc:View xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m"
xmlns:form="sap.ui.layout.form"
xmlns:core="sap.ui.core"
>

 <Page title="Employee Registration Form">
   <content>
      <form:SimpleForm>
          <form:title>
               <core:Title text="Please Enter Employee Details"/>            
          </form:title>
          <form:content>
              <Label text="Employee Name"/>
              <Input/>
              <Label text="Department"/>
              <ComboBox>
                 <items>
                    <core:Item text="SAP"/>
                    <core:Item text="SAP1"/>
                    <core:Item text="SAP2"/>
                 </items>
              </ComboBox>
          </form:content>
      </form:SimpleForm> 
   </content>
   <footer>
       <Bar>
         <contentRight>
             <Button text="Register"/>
         </contentRight>
       </Bar>
   </footer>
 </Page>


    
</mvc:View>